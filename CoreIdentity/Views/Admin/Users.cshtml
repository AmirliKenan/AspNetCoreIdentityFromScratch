@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>Users</h3>
<hr />

<table class="table table-bordered table-striped">
    <tr>

        
        <th>UserName</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Roles</th>
        <th>Add Roll</th>
    </tr>

    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="3">Hec bir User yoxdur</td>

        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
<tr>

    <td>@item.UserName</td>
    <td>@item.Email</td>
    <td>@item.PhoneNumber</td>
    <td user-roles="@item.Id"></td>
    <td><a class="btn btn-primary" asp-action="RoleAssign" asp-route-id="@item.Id">Add Role</a></td>
</tr>

        }
    }

</table>