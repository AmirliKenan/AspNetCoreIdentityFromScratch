@model UserViewModel 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}

<h3 class="text-center">UserInformation</h3>
<div class="row">
    <div class="col-sm-3">
        <img style="width:100%;height:100%" src="@Model.Picture" />
    </div>
    <div class="col-sm-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th>User Name</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th>BirthDay</th>
                <td>@Model.BirthDay?.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <th>City</th>
                <td>@Model.City</td>
            </tr>

        </table>

    </div>

</div>

